      Weapon0.MaxRange = 80
      Weapon0.Ammo = 4
      Weapon1 ->* VehicleType.BigMiniGun
      Weapon1.Ammo = 6
      Weapon1.ReactionFireShots = 1
      Weapon1.Punch@MinRange = 85
      Weapon1.MaxRange = 40
   } Weapons
} VehicleType
